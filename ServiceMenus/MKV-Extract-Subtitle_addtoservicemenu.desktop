[Desktop Entry]
Actions=MKVextractSubtitle;
Icon=/usr/share/icons/hicolor/scalable/apps/ks-video.svgz
MimeType=video/x-matroska;
ServiceTypes=KonqPopupMenu/Plugin
Type=Service
X-KDE-StartupNotify=false
X-KDE-Submenu=Extra-Services
X-KDE-Submenu[x-test]=xxExtra-Servicesxx

[Desktop Action MKVextractSubtitle]
Exec=which mkvextract; if [ "$?" != "0" ];then pydialog --icon=/usr/share/icons/hicolor/scalable/apps/ks-error.svgz --title="MKV Extract Subtitle" --passivepopup="[Error] Please install mkvextract command and try again."; exit 1; else /usr/share/applications/MKV_Extract-subtitle.sh %F;fi
Icon=/usr/share/icons/hicolor/scalable/apps/ks-video.svgz
Name=MKV Extract Subtitle
Name[de]=MKV um Untertitel zu Ziehen
Name[es]=MKV Extraer Subtítulo
Name[fr]=MKV Extraire Sous-titre
Name[it]=MKV Estrarre Sottotitolo
Name[ja]=引き出すべき MKV は字幕を付けます
Name[ko]=부제를 빼내는 MKV
Name[pt]=MKV para Extrair Subtítulo
Name[ru]=MKV Извлечь субтитры
Name[uk]=MKV Видобути субтитри
Name[zh_CN]=MKV 吸取副题
Name[x-test]=xxMKV Extract Subtitlexx
