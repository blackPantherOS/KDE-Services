[Desktop Entry]
Actions=AVinfo;
Icon=/usr/share/icons/hicolor/scalable/apps/ks-audio-video-info.svgz
MimeType=audio/*;video/*;
ServiceTypes=KonqPopupMenu/Plugin
Type=Service
X-KDE-StartupNotify=false
X-KDE-Submenu=Extra-Services
X-KDE-Submenu[x-test]=xxExtra-Servicesxx

[Desktop Action AVinfo]
Exec=which ffprobe; if [ "$?" != "0" ];then pydialog --icon=/usr/share/icons/hicolor/scalable/apps/ks-error.svgz --title="[Audio|Video] Info" --passivepopup="[Error] Please install ffprobe command and try again."; exit 1; else SERIAL=$(date +%s); for file in %F;do ffprobe $file 2> /tmp/info-$SERIAL; echo "File: ${file##*/}" >> /tmp/info2-$SERIAL; grep -e Duration -e Stream /tmp/info-$SERIAL >> /tmp/info2-$SERIAL; echo >> /tmp/info2-$SERIAL;done; pydialog --icon=/usr/share/icons/hicolor/scalable/apps/ks-audio-video-info.svgz --title="[Audio|Video] Info" --textbox /tmp/info2-$SERIAL $(($(cat /tmp/info2-$SERIAL|wc -L)*7)) 137; rm -f /tmp/info*;fi
Icon=/usr/share/icons/hicolor/scalable/apps/ks-audio-video-info.svgz
Name=[Audio|Video] Info
Name[de]=Informationen von [Audio|Video]
Name[es]=Información de [Audio|Video]
Name[fr]=Information de [Audio|Vidéo]
Name[it]=Informazione di [Audio|Video]
Name[ja]=インフォメーションの [オーディオ|ビデオ]
Name[ko]=정보 의 [음성|비디오]
Name[pt]=Informação de [Auditivo|Vídeo]
Name[ru]=Информация о [Аудио|Видео]
Name[uk]=Інформація про [Аудіо|Відео]
Name[zh_CN]=数据 [声音|录象机]
Name[x-test]=xx[Audio|Video] Infoxx
